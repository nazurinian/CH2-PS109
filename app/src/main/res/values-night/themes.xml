<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SoilInk" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/theme_dark_primary</item>
        <item name="colorOnPrimary">@color/theme_dark_onPrimary</item>
        <item name="colorPrimaryContainer">@color/theme_dark_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/theme_dark_onPrimaryContainer</item>

        <item name="colorSecondary">@color/theme_dark_secondary</item>
        <item name="colorOnSecondary">@color/theme_dark_onSecondary</item>
        <item name="colorSecondaryContainer">@color/theme_dark_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/theme_dark_onSecondaryContainer</item>

        <item name="colorError">@color/md_theme_dark_error</item>
        <item name="colorOnError">@color/md_theme_dark_onError</item>
        <item name="colorErrorContainer">@color/md_theme_dark_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_dark_onErrorContainer</item>
        <item name="colorOutline">@color/md_theme_dark_outline</item>
        <item name="android:colorBackground">@color/md_theme_dark_background</item>
        <item name="colorOnBackground">@color/md_theme_dark_onBackground</item>

        <item name="android:statusBarColor">@color/color_status_bar</item>

        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="customTextColor" parent="Base.Theme.SoilInk">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textColorPrimary">@color/color_black</item>
        <item name="android:textColorSecondary">@color/color_black</item>
    </style>

    <style name="SplashScreenTheme" parent="Base.Theme.SoilInk">
        <item name="android:windowDisablePreview">true</item>
    </style>
</resources>