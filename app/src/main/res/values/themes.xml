<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SoilInk" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/theme_light_primary</item> <!-- Button -->
        <item name="colorOnPrimary">@color/theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/theme_light_onPrimaryContainer</item>

        <item name="colorSecondary">@color/theme_light_secondary</item>
        <item name="colorOnSecondary">@color/theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/theme_light_onSecondaryContainer</item>

        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>

        <item name="colorSurface">@color/md_theme_light_surface</item>
<!--        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>-->
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
<!--        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>-->
<!--        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>-->

        <item name="android:statusBarColor">@color/color_status_bar</item>

        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="ThemeOverlay.Material3.Toolbar.Surface.Color" parent="Base.Theme.SoilInk">
        <item name="android:background">@color/color_toolbar_bar</item>
    </style>

    <style name="customTextColor" parent="Base.Theme.SoilInk">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textColorPrimary">@color/color_white</item>
        <item name="android:textColorSecondary">@color/color_white</item>
    </style>

    <style name="Theme.SoilInk" parent="Base.Theme.SoilInk" />

    <style name="FullScreen" parent="Base.Theme.SoilInk">
        <item name="android:color">@color/theme_light_onPrimaryContainer</item>
    </style>

    <style name="HomeAppbar" parent="Base.Theme.SoilInk">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SplashScreenTheme" parent="Base.Theme.SoilInk">
        <item name="android:windowDisablePreview">true</item>
    </style>
</resources>
